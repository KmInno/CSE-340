<h1>Vehicle Management</h1>
<%- messages() %>

  <ul>
    <li> <a href="/inv/new_classification">Add New Classification</a></li>
    <li> <a href="/inventory/new_vehicle">Add New Make</a></li>
  </ul>

  <h2>Manage Inventory</h2>

  <!-- Dropdown menu for classifications -->
  <div class="cont">
    <p>Select a Classification from the list below</p>


    <select id="classificationList">
      <option value="">Select a classification</option>
      <% classifications.forEach(function(classification) { %>
        <option value="<%= classification.classification_id %>">
          <%= classification.classification_name %>
        </option>
        <% }); %>
    </select>

  </div>

  <table id="inventoryDisplay"></table>

  <noscript>JavaScript must be enabled to use this page.</noscript>

  <script src="../../js/inventory.js"></script>